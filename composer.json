{
    "name": "vasymus/unit-conversions",
    "description": "Perform unit conversions in PHP.",
    "keywords": [
        "vasymus",
        "unit-conversions"
    ],
    "homepage": "https://github.com/vasymus/unit-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Vasyl Zhdankin",
            "email": "vasymuszchd@mail.ru",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.28",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Vasymus\\UnitConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vasymus\\UnitConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes --config .php_cs.dist.php"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
